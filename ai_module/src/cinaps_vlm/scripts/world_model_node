#!/usr/bin/env python3
import os
import sys

try:
    import rospkg
except Exception:
    rospkg = None

# Ensure Python can import the package layout in this workspace
if rospkg is not None:
    try:
        pkg_path = rospkg.RosPack().get_path('cinaps_vlm')
        # Add the workspace's src dir so `import cinaps_vlm` resolves to this package
        src_root = os.path.dirname(pkg_path)
        if src_root not in sys.path:
            sys.path.insert(0, src_root)
    except Exception:
        pass

from cinaps_vlm.world_model_node import WorldModelNode  # type: ignore


def main():
    node = WorldModelNode()
    node.spin()


if __name__ == '__main__':
    main()

